<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_launcher_actionbar</item>
        <item name="android:background">@color/OlympiaBlue</item>
    </style>

    <!-- Rating bar for daily offers -->
    <style name="bs_daily_offer_ratingbar_style" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_small_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small_holo_dark</item>
        <!--<item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>-->
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

</resources>