<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="-15dp">

    <TextView
        android:id="@+id/bs_daily_offer_name"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinatlasagne"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/bs_daily_offer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:text="4,50â‚¬" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cook"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/bs_daily_offer_name"/>

    <TextView
        android:id="@+id/bs_daily_offer_cook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bs_daily_offer_price"
        android:textColor="#000000" />

    <RatingBar
        android:id="@+id/bs_daily_offer_ratingbar"
        style="@style/bs_daily_offer_ratingbar_style"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_below="@id/bs_daily_offer_cook"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
